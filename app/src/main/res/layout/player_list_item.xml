<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:maxHeight="300dp"
    app:cardBackgroundColor="#1C1C1C"
    app:cardCornerRadius="70dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPlayerPortrait"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:paddingLeft="-10dp"
            app:srcCompat="@drawable/thumb" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPlayerPlatform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="XBL"
                    android:textAlignment="center"
                    android:textColor="@color/colorDetail"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivPlayerEndorsement"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:tint="@color/colorDetail"
                    app:srcCompat="@drawable/endorsement_4" />

                <ImageView
                    android:id="@+id/ivPlayerRole"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:tint="@color/colorDetail"
                    app:srcCompat="@drawable/damage" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPlayerTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bignoodletoo"
                android:text="aaaaaaaaaaaa "
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvPlayerTagNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_weight="1"
                android:fontFamily="@font/bignoodletoo"
                android:text="#12345 "
                android:textColor="@color/colorDetail"
                android:textSize="24sp" />

        </LinearLayout>

        <Switch
            android:id="@+id/sPlayerFollowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:paddingRight="15dp"
            android:textAlignment="center"
            android:thumbTint="@color/colorPrimary"
            android:trackTint="#FFFFFF" />
    </LinearLayout>
</androidx.cardview.widget.CardView>