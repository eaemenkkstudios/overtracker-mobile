<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="studios.eaemenkk.overtracker">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".view.activity.HeroActivity"
            android:label="@string/title_activity_hero">
            <intent-filter>
                <action android:name="HERO_INFO" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="HERO_INFO" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.LoginActivity"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="LOGIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="LOGIN" />
                <data
                    android:host="login"
                    android:scheme="overtracker" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.InfoActivity"
            android:theme="@style/AppTheme.CustomTheme">
            <intent-filter>
                <action android:name="PLAYER_INFO" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="PLAYER_INFO" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.HeroListActivity">
            <intent-filter>
                <action android:name="HERO_LIST" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="HERO_LIST" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.FeedActivity">
            <intent-filter>
                <action android:name="GLOBAL_FEED" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="GLOBAL_FEED" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.LocalFeedActivity">
            <intent-filter>
                <action android:name="LOCAL_FEED" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="LOCAL_FEED" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.FollowingActivity">
            <intent-filter>
                <action android:name="FOLLOWED_PLAYERS" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="FOLLOWED_PLAYERS" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ad_app_id" />
    </application>

</manifest>